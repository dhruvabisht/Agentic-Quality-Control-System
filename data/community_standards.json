    },
    "severity_levels": {
        "low": {
            "description": "Minor policy concern, may warrant warning",
            "confidence_threshold": 80,
            "auto_action": false
        },
        "medium": {
            "description": "Moderate policy violation, review recommended",
            "confidence_threshold": 70,
            "auto_action": false
        },
        "high": {
            "description": "Serious policy violation, likely removal",
            "confidence_threshold": 60,
            "auto_action": true
        },
        "critical": {
            "description": "Severe violation, immediate action required",
            "confidence_threshold": 50,
            "auto_action": true
        }
    },
    "regional_considerations": {
