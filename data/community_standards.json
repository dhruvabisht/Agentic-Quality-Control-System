            "severity": "medium",
            "action": "age_restrict_or_remove",
            "rules": [
                {
                    "rule_id": "AC-001-A",
                    "name": "Explicit Sexual Content",
                    "description": "Pornographic or sexually explicit material",
                    "severity": "high",
                    "keywords_en": [
