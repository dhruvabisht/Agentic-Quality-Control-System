{
    "metadata": {
        "version": "1.0.0",
        "last_updated": "2026-01-19",
        "source": "Meta Community Standards (Simulated)",
        "description": "Policy rules database for Sentinel-AI content moderation"
    },
    "policies": {
        "hate_speech": {
            "id": "HS-001",
            "name": "Hate Speech",
            "description": "Content that attacks people based on protected characteristics",
            "severity": "high",
            "action": "remove",
            "protected_characteristics": [
                "race",
                "ethnicity",
                "national origin",
                "religious affiliation",
                "sexual orientation",
                "caste",
                "sex",
                "gender identity",
                "serious disease",
                "disability"
            ],
            "rules": [
                {
                    "rule_id": "HS-001-A",
                    "name": "Dehumanizing Speech",
                    "description": "Comparing people to animals, insects, or subhuman beings",
                    "severity": "critical",
                    "keywords_en": [
                        "cockroaches",
                        "animals",
                        "vermin",
                        "subhuman",
                        "parasites",
                        "filth"
                    ],
                    "keywords_hi": [
                        "कीड़े",
                        "जानवर",
                        "कुत्ते",
                        "सूअर",
                        "गंदगी",
                        "नीच"
                    ]
                },
                {
                    "rule_id": "HS-001-B",
                    "name": "Slurs and Epithets",
                    "description": "Using derogatory terms targeting protected groups",
                    "severity": "high",
                    "keywords_en": [
                        "[REDACTED_SLURS]"
                    ],
                    "keywords_hi": [
                        "[REDACTED_SLURS_HI]"
                    ]
                },
                {
                    "rule_id": "HS-001-C",
                    "name": "Calls for Exclusion",
                    "description": "Advocating for exclusion, segregation, or discrimination",
                    "severity": "high",
                    "keywords_en": [
                        "go back to",
                        "don't belong",
                        "should be banned",
                        "get out"
                    ],
                    "keywords_hi": [
                        "वापस जाओ",
                        "यहाँ नहीं रहना",
                        "निकलो",
                        "भाग जाओ"
                    ]
                },
                {
                    "rule_id": "HS-001-D",
                    "name": "Caste-based Discrimination",
                    "description": "Content promoting caste-based hatred or discrimination (India-specific)",
                    "severity": "high",
                    "is_regional": true,
                    "region": "IN",
                    "keywords_hi": [
                        "छोटी जात",
                        "नीच जात",
                        "अछूत",
                        "चमार",
                        "भंगी"
                    ]
                }
            ],
            "hindi_variations": {
                "code_mixing_patterns": [
                    "ये लोग are so [slur]",
                    "these [group] को देश से निकालो",
                    "[group] की औकात नहीं"
                ],
                "cultural_contexts": [
                    "Caste-based discrimination",
                    "Religious tension references",
                    "Regional prejudice"
                ]
            }
        },
        "graphic_violence": {
            "id": "GV-001",
            "name": "Graphic Violence",
            "description": "Content depicting extreme violence or gore",
            "severity": "high",
            "action": "remove",
            "rules": [
                {
                    "rule_id": "GV-001-A",
                    "name": "Explicit Violence Depiction",
                    "description": "Detailed descriptions of violent acts causing death or serious injury",
                    "severity": "critical",
                    "keywords_en": [
                        "kill them all",
                        "blood everywhere",
                        "slaughter",
                        "massacre",
                        "murder",
                        "dismember"
                    ],
                    "keywords_hi": [
                        "मार डालो",
                        "खून",
                        "कत्लेआम",
                        "हत्या",
                        "काट डालो"
                    ]
                },
                {
                    "rule_id": "GV-001-B",
                    "name": "Threats of Violence",
                    "description": "Direct or implied threats of physical harm",
                    "severity": "high",
                    "keywords_en": [
                        "I will kill",
                        "going to hurt",
                        "destroy you",
                        "beat you up",
                        "attack"
                    ],
                    "keywords_hi": [
                        "मार दूंगा",
                        "जान से मार",
                        "पीट दूंगा",
                        "तोड़ दूंगा"
                    ]
                },
                {
                    "rule_id": "GV-001-C",
                    "name": "Glorification of Violence",
                    "description": "Praising or celebrating violent acts",
                    "severity": "high",
                    "keywords_en": [
                        "deserved to die",
                        "justice served",
                        "should suffer"
                    ],
                    "keywords_hi": [
                        "मरना चाहिए था",
                        "सबक सिखाया",
                        "इन्साफ हुआ"
                    ]
                }
            ]
        },
        "harassment": {
            "id": "HR-001",
            "name": "Harassment and Bullying",
            "description": "Content that targets individuals with unwanted attention or abuse",
            "severity": "medium",
            "action": "warn_then_remove",
            "rules": [
                {
                    "rule_id": "HR-001-A",
                    "name": "Direct Personal Attacks",
                    "description": "Insulting or degrading specific individuals",
                    "severity": "medium",
                    "keywords_en": [
                        "you're worthless",
                        "nobody likes you",
                        "kill yourself",
                        "loser",
                        "pathetic"
                    ],
                    "keywords_hi": [
                        "तू बेकार है",
                        "तुझसे घृणा",
                        "मर जा",
                        "नालायक",
                        "कमीना"
                    ]
                },
                {
                    "rule_id": "HR-001-B",
                    "name": "Doxxing",
                    "description": "Sharing private information without consent",
                    "severity": "critical",
                    "patterns": [
                        "phone numbers",
                        "addresses",
                        "personal photos",
                        "workplace info"
                    ]
                },
                {
                    "rule_id": "HR-001-C",
                    "name": "Coordinated Harassment",
                    "description": "Organizing groups to target individuals",
                    "severity": "high",
                    "keywords_en": [
                        "let's spam",
                        "everyone report",
                        "mass comment",
                        "raid their page"
                    ],
                    "keywords_hi": [
                        "सबको बताओ",
                        "रिपोर्ट करो",
                        "धावा बोलो"
                    ]
                }
            ]
        },
        "misinformation": {
            "id": "MI-001",
            "name": "Misinformation",
            "description": "False or misleading information that could cause harm",
            "severity": "medium",
            "action": "label_reduce",
            "rules": [
                {
                    "rule_id": "MI-001-A",
